<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/ReaderActivityAnimation</item>
    </style>

    <style name="ReaderActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_stay_origin</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_stay_origin</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/anim_slide_right_in</item>
        <item name="android:taskOpenExitAnimation">@anim/anim_stay_origin</item>
        <item name="android:taskCloseEnterAnimation">@anim/anim_stay_origin</item>
        <item name="android:taskCloseExitAnimation">@anim/anim_slide_right_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/anim_slide_right_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/anim_stay_origin</item>
        <item name="android:taskToBackEnterAnimation">@anim/anim_stay_origin</item>
        <item name="android:taskToBackExitAnimation">@anim/anim_slide_right_out</item>
    </style>


</resources>
