<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_top_title_height_with_status_bar"
    android:background="@color/skin_bgcolor1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_top_title_height_exp_status_bar"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/top_ic48_back_white" />

        <TextView
            android:id="@+id/title_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="@color/txtcolor8"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>