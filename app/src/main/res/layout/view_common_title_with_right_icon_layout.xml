<?xml version="1.0" encoding="utf-8"?><!-- 返回键  标题        功能键（ImageView）  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_top_title_height_with_status_bar"
    android:background="@color/skin_bgcolor1"
    android:paddingTop="@dimen/common_top_title_height_top_padding">

    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/top_ic48_back_white" />

    <TextView
        android:id="@+id/title_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColor="@color/txtcolor8"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />
</LinearLayout>