<?xml version="1.0" encoding="utf-8"?><!-- 返回键  CLOSE按钮 标题 （用于wap页面）-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_top_title_height_with_status_bar"
    android:background="@color/skin_bgcolor1"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="8dp"
    android:paddingTop="@dimen/common_top_title_height_top_padding">

    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/top_ic48_back_white" />

    <ImageView
        android:id="@+id/title_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_shut"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:textColor="@color/txtcolor8"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/top_ic48_more"
        android:visibility="gone" />

</LinearLayout>