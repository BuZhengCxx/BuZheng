<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:margin="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/top_header_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <com.bu.zheng.view.OverScrollListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:divider="@null"
        android:overScrollMode="never"
        margin:rank_top_margin="@dimen/over_scroll_listview_header_init_top_margin" />

    <include
        android:id="@+id/top_title"
        layout="@layout/view_over_scroll_listview_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_top_title_height_with_status_bar" />

</FrameLayout>